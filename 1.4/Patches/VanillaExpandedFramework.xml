<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Expanded Framework</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="AnimaThrumboHorn"]</xpath>
                    <value>
                        <li Class="VFECore.ThingDefExtension">
                            <usableWithShields>true</usableWithShields>
                        </li>
                    </value>
                </li>
				
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="AnimaWargFang"]</xpath>
                    <value>
                        <li Class="VFECore.ThingDefExtension">
                            <usableWithShields>true</usableWithShields>
                        </li>
                    </value>
                </li>
				
                <li Class="PatchOperationAddModExtension">
                    <xpath>/Defs/ThingDef[defName="MeleeWeapon_RazorfangKnife"]</xpath>
                    <value>
                        <li Class="VFECore.ThingDefExtension">
                            <usableWithShields>true</usableWithShields>
                        </li>
                    </value>
                </li>
			

				<li Class="PatchOperationReplace">

					<xpath>/Defs/AchievementsExpanded.AchievementDef[defName = "TameAnimaFox"]/tab</xpath>
					<value>
                        <tab>AnimaAnimals</tab>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">

					<xpath>/Defs/AchievementsExpanded.AchievementDef[defName = "TameAnimaMuffalo"]/tab</xpath>
					<value>
                        <tab>AnimaAnimals</tab>
					</value>
				</li>
				
				
				<li Class="PatchOperationReplace">

					<xpath>/Defs/AchievementsExpanded.AchievementDef[defName = "TameAnimaMegaspider"]/tab</xpath>
					<value>
                        <tab>AnimaAnimals</tab>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">

					<xpath>/Defs/AchievementsExpanded.AchievementDef[defName = "ObtainAnimaBerry"]/tab</xpath>
					<value>
                        <tab>AnimaAnimals</tab>
					</value>
				</li>
			</operations>
		</match>
	</Operation>


</Patch>